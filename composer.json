{
  "name": "mauijay/shieldtailwindcss",
  "description": "CodeIgniter4 starter template with Shield Auth, Vite, Tailwind",
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^8.2",
    "codeigniter4/framework": "^4.5",
    "codeigniter4/shield": "^1.0",
    "codeigniter4/queue": "dev-develop",
    "codeigniter4/tasks": "dev-develop",
    "firebase/php-jwt": "^6.4"
  },
  "require-dev": {
    "codeigniter/phpstan-codeigniter": "^1.4",
    "codeigniter4/devkit": "^1.1",
    "rector/rector": "^1.0"   
  },
  "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "scripts": {
    "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
    "cs-fix": "php-cs-fixer fix --ansi --verbose --diff",
    "style-jay": "@cs-fix",
    "test": "phpunit",
    "rector": "rector process --config .config/rector.php --dry-run",
    "rector-fix": "rector process --config .config/rector.php",
    "style": "php-cs-fixer fix --config=.config/.php-cs-fixer.dist.php --dry-run",
    "style-fix": "php-cs-fixer --config=.config/.php-cs-fixer.dist.php fix"
  },  
  "minimum-stability": "dev",
  "prefer-stable": true,
  "version": "0.0.1",
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
    "phpstan/extension-installer": true
    }
  }
}
